    "globals": "^16.0.0",
    "tsc-alias": "^1.8.15",
    "typedoc": "^0.28.2",
    "typescript-eslint": "^8.30.1"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "changelog": {
